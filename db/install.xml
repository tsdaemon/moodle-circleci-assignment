<?xml version="1.0" encoding="UTF-8" ?>
<XMLDB PATH="mod/assign/db" VERSION="20140724" COMMENT="XMLDB file for Moodle mod/circleci_assign"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:noNamespaceSchemaLocation="../../../lib/xmldb/xmldb.xsd"
>
  <TABLES>
    <TABLE NAME="circleci_assign" COMMENT="This table saves additional information for assignmnent needed for CircleCI submission.">
      <FIELDS>
        <FIELD NAME="assignment" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="circleci_url" TYPE="varchar" LENGTH="512" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="circleci_token" TYPE="varchar" LENGTH="512" NOTNULL="true" SEQUENCE="false"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="assignment"/>
        <KEY NAME="assign" TYPE="foreign" FIELDS="assign" REFTABLE="assign" REFFIELDS="id"/>
      </KEYS>
    </TABLE>
    <TABLE NAME="circleci_assign_submission" COMMENT="This table saves additional information about student submission related to CircleCI.">
      <FIELDS>
        <FIELD NAME="assign_submission" TYPE="int" LENGTH="10" NOTNULL="true" SEQUENCE="false"/>
        <FIELD NAME="circleci_job_url" TYPE="varchar" LENGTH="512" NOTNULL="true" SEQUENCE="false"/>
      </FIELDS>
      <KEYS>
        <KEY NAME="primary" TYPE="primary" FIELDS="assign_submission"/>
        <KEY NAME="assign_submission" TYPE="foreign" FIELDS="assign_submission" REFTABLE="assign_submission" REFFIELDS="id"/>
      </KEYS>
    </TABLE>
  </TABLES>
</XMLDB>
